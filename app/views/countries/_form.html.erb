<%= form_for @country, :html => { :multipart => true } do |f| %>
  <% if @country.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        The form contains <%= pluralize(@country.errors.count, "error") %>.
      </div>
      <ul>
        <% @country.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :flag %>
  <%= f.file_field :flag %>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
